{
    "name": "villaflor/connection",
    "description": "Send requests to any API endpoint with ease.",
    "keywords": [
        "villaflor",
        "connection"
    ],
    "homepage": "https://github.com/villaflor/connection",
    "license": "MIT",
    "authors": [
        {
            "name": "Mark Anthony Villaflor",
            "email": "villaflor@live.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "pestphp/pest": "^2.19"
    },
    "autoload": {
        "psr-4": {
            "Villaflor\\Connection\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Villaflor\\Connection\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
